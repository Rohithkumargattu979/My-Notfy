<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".Addingitems">


    <ImageButton
        android:id="@+id/imageselectstudent"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/itemnamestudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_imageaddbtn" />

    <EditText
        android:id="@+id/itemnamestudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name_of_the_item"
        app:layout_constraintBottom_toTopOf="@+id/itemnumberstudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageselectstudent" />

    <EditText
        android:id="@+id/itemnumberstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/number_of_items"
        app:layout_constraintBottom_toTopOf="@+id/itemdescription"
        app:layout_constraintStart_toStartOf="@+id/itemnamestudent"
        app:layout_constraintTop_toBottomOf="@+id/itemnamestudent" />

    <EditText
        android:id="@+id/itemdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/item_description"
        app:layout_constraintBottom_toTopOf="@+id/addtodatabase"
        app:layout_constraintStart_toStartOf="@+id/itemnumberstudent"
        app:layout_constraintTop_toBottomOf="@+id/itemnumberstudent" />

    <Button
        android:id="@+id/addtodatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemdescription" />
</androidx.constraintlayout.widget.ConstraintLayout>